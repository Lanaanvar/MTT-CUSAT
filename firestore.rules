rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to all events
    match /events/{eventId} {
      allow read: if true;
      // Only allow admins to write to events
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Allow anyone to create registrations without authentication
    match /registrations/{registrationId} {
      allow read, write: if true;  // Allow all operations without authentication for now
    }
    
    // Other collections require authentication
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
} 