rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to all events
    match /events/{eventId} {
      allow read: if true;
      // Only allow admins to write to events
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Allow anyone to create registrations
    match /registrations/{registrationId} {
      allow read: if true;
      allow create: if true;
      // Only allow updates to own registrations or by admins
      allow update, delete: if request.auth != null && 
        (request.auth.token.email == resource.data.email || request.auth.token.admin == true);
    }
    
    // Other collections require authentication
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
} 